<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FintechLab2023" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>


    <style name="ShapeAppearanceOverlayButtonCircle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80%</item>
        <item name="borderWidth">1dp</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">#0094FF</item>
        <item name="android:layout_margin">@dimen/dp_8</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayButtonCircle</item>
    </style>


</resources>